<h1><%= @cocktail.name %> <i class="fas fa-cocktail"></i></h1>
<h3><%= link_to new_cocktail_dose_path(@cocktail) do %>
Add a dose <i class="fas fa-fill-drip"></i></h3>
<% end %>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><h4><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
   <% end %>
      </h4></li>

<% end %>
</ul>


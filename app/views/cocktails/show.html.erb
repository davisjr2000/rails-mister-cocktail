<div class="container">
<h1><%= @cocktail.name %> <i class="fas fa-glass-martini"></i></h1>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><h4><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-minus-circle"></i>
   <% end %>
      </h4></li>

<% end %>
</ul>
<h3><%= link_to new_cocktail_dose_path(@cocktail) do %>
Add a dose <i class="fas fa-wine-glass-alt"></i></h3>
<% end %>
</div>
